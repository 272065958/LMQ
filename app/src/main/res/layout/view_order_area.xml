<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cjx_background_color"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/auto_margin"
        android:paddingTop="@dimen/auto_margin"
        android:background="@android:color/white"
        android:visibility="gone" />

    <include
        android:id="@+id/recycler_line"
        android:visibility="gone"
        layout="@layout/divider_view" />

    <include
        layout="@layout/view_order_time" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_pressed_bg"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/divider_height"
        android:padding="@dimen/auto_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/auto_margin"
            android:textColor="@color/cjx_text_main_color"
            android:textColorHint="@color/cjx_text_secondary_color"
            android:text="住房面积："
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/order_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/auto_margin"
            android:layout_alignParentRight="true"
            android:textColor="@color/cjx_text_main_color"
            android:textColorHint="@color/cjx_text_secondary_color"
            android:textSize="@dimen/text_size_middle" />

    </RelativeLayout>
</LinearLayout>